package main;

func binsearch(a []int, l, r, key int) int {
    if r >= l {
        mid := l + (r-l) / 2;

        if a[mid] == key {
            return mid;
        };

        if a[mid] > key {
            return binsearch(a, l, mid-1, key);
        };

        return binsearch(a, mid+1, r, key);
    };

    return -1;
};

func main() {
    var a [5]int;
    for i := 0; i < 5; i++ {
        a[i] = i;
    };

    print %d binsearch(a, 0, 4, 2);
};